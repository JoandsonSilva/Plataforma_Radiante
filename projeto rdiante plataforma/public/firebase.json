{
  "hosting": {
    "public": "app/static",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "emulators": {
      "hosting": {
        "port": 5000
      },
      "auth": {
        "port": 9099
      }
    }
  }
} 